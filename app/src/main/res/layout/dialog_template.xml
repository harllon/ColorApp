<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/colorDetailsTextView"
        android:layout_width="204dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/ColorDetails"
        android:textColor="#AA00FF"
        android:textSize="24sp"
        android:translationY="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:translationX="50dp"
            android:translationY="0dp">

            <TextView
                android:id="@+id/rgbTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/RGB"
                android:textColor="#050505"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="italic"
                android:translationY="30dp" />

            <TextView
                android:id="@+id/gTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#020202"
                android:textSize="16sp"
                android:textStyle="italic"
                android:translationY="50dp" />

            <TextView
                android:id="@+id/bTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#040404"
                android:textSize="16sp"
                android:textStyle="italic"
                android:translationY="70dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="211dp"
            android:orientation="vertical"
            android:translationX="130dp"
            android:translationY="0dp">

            <TextView
                android:id="@+id/hsvTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/HSV"
                android:textColor="#020202"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#020202"
                android:textSize="16sp"
                android:textStyle="italic"
                android:translationY="30dp" />

            <TextView
                android:id="@+id/sTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#050505"
                android:textSize="16sp"
                android:textStyle="italic"
                android:translationY="50dp" />

            <TextView
                android:id="@+id/vTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#020202"
                android:textSize="16sp"
                android:translationY="70dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/deleteSingleColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#AA00FF"
        android:text="@string/Delete"
        android:translationY="0dp" />

</LinearLayout>